@model List<Book>
@{
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Books</h4>
                <a asp-action="create"><button type="button" class="btn btn-success">Create</button></a>
                <div class="table-responsive pt-3">
                    <table class="table table-dark">
                        <thead>
                            <tr>
                                <th>
                                    No
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Author Fullname
                                </th>
                                <th>
                                    Genre Name
                                </th>
                                <th>
                                    Tag Name
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var book in Model)
                            {
                                count++;
                                <tr>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        <img style="width:110px;height:160px; border-radius:0;" src="~/assets/image/products/@book.BookImages.FirstOrDefault(x=>x.IsPrimary==true)?.Image" alt="">
                                    </td>
                                    <td>
                                        @book.Name
                                    </td>
                                    <td>
                                        @book.Author.Fullname
                                    </td>
                                    <td>
                                        @book.Genre.Name
                                    </td>
                                    <td>
                                        @foreach (var item in book.BookTags)
                                        {
                                            <p>@item.Tag.Name</p>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="update" asp-route-id="@book.Id">
                                            <button type="button" class="btn btn-warning btn-rounded btn-fw">
                                                <i class="mdi mdi-pencil"></i>
                                            </button>
                                        </a>
                                        <a asp-action="delete" asp-route-id="@book.Id">
                                            <button type="button" class="btn btn-danger btn-rounded btn-fw">
                                                <i class="mdi mdi-delete"></i>
                                            </button>
                                        </a>
                                        <a asp-action="detail" asp-route-id="@book.Id">
                                            <button type="button" class="btn btn-danger btn-rounded btn-fw">
                                                <i class="mdi mdi-open-in-new"></i>
                                                </button>
                                            </a>
                                    </td>
                                </tr>

                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>