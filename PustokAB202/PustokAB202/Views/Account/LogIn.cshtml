@model LoginUserVM

<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row justify-content-center">

			<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
				<form method="post">
					<div class="login-form">
						<h4 class="login-title">LogIn Form</h4>
						<div class="row">
							<div class="text-danger" asp-validation-summary="ModelOnly"></div>
							<div class="col-md-6 col-6 mb--15">
								<label asp-for="UsernameOrEmail">Username or Email</label>
								<input class="mb-0 form-control" asp-for="UsernameOrEmail" placeholder="Enter your  name">
								<span asp-validation-for="UsernameOrEmail"></span>
							</div>
							<div class="col-md-6 col-6 mb--15">
								<label asp-for="Password">Password</label>
								<input class="mb-0 form-control" asp-for="Password" placeholder="Enter your password">
								<span asp-validation-for="Password"></span>
							</div>
							<div class="col-md-6 col-6 mb--15 d-flex flex-row">
								<label asp-for="IsRemembered">Remember Me</label>
								<input style="width:20px; height:20px" class="mb-0 form-control" asp-for="IsRemembered">
							</div>
						
							
							
							<div class="col-md-12">
								<button class="btn">LogIn</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>
