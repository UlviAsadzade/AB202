
@model RegisterUserVM

<main class="page-section inner-page-sec-padding-bottom">
	<div class="container">
		<div class="row justify-content-center">
			
			<div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
				<form method="post">
					<div class="login-form">
						<h4 class="login-title">Register Form</h4>
						<div class="row">
							<div class="text-danger" asp-validation-summary="ModelOnly"></div>
							<div class="col-md-6 col-6 mb--15">
								<label asp-for="Name">Name</label>
								<input class="mb-0 form-control" asp-for="Name" placeholder="Enter your  name">
								<span asp-validation-for="Name"></span>
							</div>
							<div class="col-md-6 col-6 mb--15">
								<label asp-for="Surname">Surname</label>
								<input class="mb-0 form-control" asp-for="Surname" placeholder="Enter your  surname">
								<span asp-validation-for="Surname"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="UserName">UserName</label>
								<input class="mb-0 form-control" asp-for="UserName" placeholder="Enter your  username">
								<span asp-validation-for="UserName"></span>
							</div>
							<div class="col-md-12 col-12 mb--15">
								<label asp-for="Email">Email</label>
								<input class="mb-0 form-control" asp-for="Email" placeholder="Enter your  email">
								<span asp-validation-for="Email"></span>
							</div>
							<div class="col-md-6 col-6 mb--15">
								<label asp-for="Password">Password</label>
								<input class="mb-0 form-control" asp-for="Password" placeholder="Enter your  password">
								<span asp-validation-for="Password"></span>
							</div>
							<div class="col-md-6 col-6 mb--15">
								<label asp-for="ConfirmPassword">Repeat Password</label>
								<input class="mb-0 form-control" asp-for="ConfirmPassword" placeholder="Repeat your  password">
								<span asp-validation-for="ConfirmPassword"></span>
							</div>
							<div class="col-md-6 col-6 mb--15 d-flex flex-column">
								@foreach (Gender gender in Enum.GetValues(typeof(Gender)))
								{
									<div style="display:flex; align-items:center; justify-content:center;">
										<input type="radio" value="@gender" name="Gender" />
										<label style="margin:0;">@gender</label>
									</div>
								}
								</div>
							<div class="col-md-12">
								<button>Register</button>
							</div>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>