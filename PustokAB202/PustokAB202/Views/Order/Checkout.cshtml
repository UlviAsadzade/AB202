@model OrderVM

<main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<!-- Checkout Form s-->
				<div class="checkout-form">
					<div class="row row-40">
						<div class="col-lg-7 mb--20">
							<!-- Billing Address -->
							<form id="billing-form" class="mb-40" method="post">
								<h4 class="checkout-title">Billing Address</h4>
								<div class="row">
									<div class="col-md-6 col-12 mb--20">
										<label asp-for="Name"> </label>
										<input asp-for="Name" placeholder="Name">
										<span asp-validation-for="Name"></span>
									</div>
									<div class="col-md-6 col-12 mb--20">
										<label asp-for="Surname"> </label>
										<input asp-for="Surname" placeholder="Surname">
										<span asp-validation-for="Surname"></span>
									</div>
									<div class="col-md-6 col-12 mb--20">
										<label asp-for="Email"> </label>
										<input asp-for="Email" placeholder="Email">
										<span asp-validation-for="Email"></span>
									</div>
									<div class="col-md-6 col-12 mb--20">
										<label asp-for="Adress"> </label>
										<input asp-for="Adress" placeholder="Adress">
										<span asp-validation-for="Adress"></span>
									</div>
								</div>
							</form>
							<!-- Shipping Address -->

						</div>
						<div class="col-lg-5">
							<div class="row">
								<!-- Cart Total -->
								<div class="col-12">
									<div class="checkout-cart-total">
										<h2 class="checkout-title">YOUR ORDER</h2>
										<h4>Product <span>Total</span></h4>
										<ul>
											@foreach (var item in Model.CheckoutItemVMs)
											{
												<li>
													<span class="left">@item.BookName X @item.Count</span> <span class="right">$@item.Price</span>
												</li>
											}

										</ul>

										<h4>Grand Total <span>$@Model.CheckoutItemVMs.Sum(x=>x.Count*x.Price)</span></h4>

										<button form="billing-form" class="place-order w-100">Place order</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>